    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Compile Dashboards",
            "type": "debugpy",
            "request": "launch",
            "module": "dashboard_compiler.cli",
            "args": ["compile"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Compile Dashboards and Upload",
            "type": "debugpy",
            "request": "launch",
            "module": "dashboard_compiler.cli",
            "args": ["compile", "--upload"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ]
}