---
extends: default

rules:
  line-length:
    max: 140
    level: warning
  indentation:
    spaces: 2
  comments:
    min-spaces-from-content: 1
  document-start:
    present: true
  truthy:
    allowed-values: ['true', 'false', 'yes', 'no']
    check-keys: false

ignore: |
  .venv/
  venv/
  node_modules/
  dist/
  build/
  output/
  htmlcov/
  .git/
  vscode-extension/node_modules/
